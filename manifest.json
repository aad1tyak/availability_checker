{
  "manifest_version": 3,
  "name": "YorkU Course Availability Checker",
  "version": "1.0",
  "description": "Checks for course availability on YorkU's registration site.",
  "permissions": [
    "cookies",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.yorku.ca/*",
    "*://yorku.ca/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.yorku.ca/*",
        "*://yorku.ca/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}